<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScheduleFragment" >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0.50dp"
        android:background="#efefef" >

        <RelativeLayout
            android:id="@+id/Schedule_new_party_layout"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:background="#000000" >

            <TextView
                android:id="@+id/Schedule_new_party"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="+ 组建新的聚会"
                android:textColor="#ffffff"
                android:textSize="17.0sp" />
        </RelativeLayout>

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/schedule_swipe_refresh"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/Schedule_new_party_layout" >

            <ListView
                android:id="@+id/schedule_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:background="#efefef" >
            </ListView>
        </android.support.v4.widget.SwipeRefreshLayout>

        <TextView
            android:id="@+id/Schedule_prompt_new_party"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/Schedule_new_party_layout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="50dp"
            android:text="请添加日程"
            android:textColor="#00e3e3"
            android:textSize="17.0sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

</RelativeLayout>