<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PayActivity" >

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="54.0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dp"
        android:background="@drawable/pay_corners" >

        <RelativeLayout
            android:id="@+id/PayCancle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5.0dp"
            android:background="@drawable/pay_gray_corners" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="取消"
                android:textColor="#000000"
                android:textSize="14.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="230.0dp"
        android:layout_above="@+id/relativeLayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10.0dp"
        android:layout_marginRight="10.0dp"
        android:background="@drawable/pay_corners" >

        <RelativeLayout
            android:id="@+id/PayUnionpayLayout"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_margin="5.0dp"
            android:background="@drawable/pay_gray_corners" >

            <TextView
                android:id="@+id/PayUnionpayTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="银联在线支付"
                android:textColor="#000000"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PayWeChatWalletLayout"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_above="@+id/PayUnionpayLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="5.0dp"
            android:layout_marginRight="5.0dp"
            android:layout_marginTop="5.0dp"
            android:background="@drawable/pay_gray_corners" >

            <TextView
                android:id="@+id/PayWeChatWalletTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="微信钱包支付"
                android:textColor="#000000"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PayTreasureLayout"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_above="@+id/PayWeChatWalletLayout"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5.0dp"
            android:layout_marginRight="5.0dp"
            android:background="@drawable/pay_gray_corners" >

            <TextView
                android:id="@+id/PayTreasureTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="支付宝支付"
                android:textColor="#000000"
                android:textSize="14.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/PayTreasureLayout"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5.0dp" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dp"
                android:text="提示"
                android:textColor="#000000"
                android:textSize="14.0sp" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5.0dp"
                android:text="真的要参加该聚会吗?"
                android:textColor="#535353"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView6"
                android:layout_centerHorizontal="true"
                android:text="该聚会为预付款聚会,参加了就不能取消了哦~"
                android:textColor="#535353"
                android:textSize="12.0sp" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView7"
                android:layout_centerHorizontal="true"
                android:text="确认参与需要先支出预缴金额."
                android:textColor="#535353"
                android:textSize="12.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>