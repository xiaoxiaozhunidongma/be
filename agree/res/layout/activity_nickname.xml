<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NicknameActivity" >

    <RelativeLayout
        android:id="@+id/Nickname_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/Nickname_back_layout"
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            
             >

            <TextView
                android:id="@+id/Nickname_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="返回"
                android:textSize="17.0sp"
                android:textColor="#d3d3d3"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Nickname_OK_layout"
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            
             >

            <TextView
                android:id="@+id/Nickname_OK"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:textSize="17.0sp"
                android:textColor="#d3d3d3"
                 />

        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Nickname_title_layout"
        android:layout_centerHorizontal="true"
        android:background="#efefef" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="60.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20.0dp"
                android:layout_marginTop="35.0dp"
                android:text="输入你想要更改的姓名"
                android:textColor="#808080"
                android:textSize="12.0sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Nickname_nickname_layout"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" >

            <EditText
                android:id="@+id/Nickname_nickname"
                android:layout_width="150.0dp"
                android:layout_height="40.0dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dp"
                android:background="@null"
                android:ems="10"
                android:hint="昵称"
                android:gravity="left|center"
                android:textSize="17.0sp" >

                <requestFocus />
            </EditText>

            <RelativeLayout
                android:id="@+id/Nickname_warn_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/Nickname_nickname"
                android:visibility="gone"
                 >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="15.0dp"
                    android:layout_height="15.0dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/warn1" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageView1"
                    android:layout_toRightOf="@+id/imageView1"
                    android:text="姓名长度不能超过14个字符!"
                    android:textSize="9.0sp"
                    android:textColor="#ff0000"
                    android:layout_marginLeft="5.0dp"
                     />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100.0dp"
            android:layout_below="@+id/Nickname_nickname_layout"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/Nickname_prompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10.0dp"
                android:text="用户姓名长度不能小于2个字符,"
                android:textSize="12.0sp"
                android:textColor="#808080"
                 />

        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
