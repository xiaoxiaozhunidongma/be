<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".PartyDetailsActivity" >

    <RelativeLayout
        android:id="@+id/PartyDetails_title_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/PartyDetails_back_layout"
            android:layout_width="@dimen/title_left_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/PartyDetails_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/partydetails_title_left"
                android:textColor="@drawable/title_left_color"
                android:textSize="@dimen/title_left_size" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/PartyDetails_more_layout"
            android:layout_width="@dimen/title_right_width"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/PartyDetails_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/partydetails_title_right"
                android:textColor="@drawable/title_right_color"
                android:textSize="@dimen/title_right_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/party_title_text"
            android:textColor="@drawable/title_text_color"
            android:textSize="@dimen/title_size" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PartyDetails_title_layout"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/PartyDetails_map_layout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="5.0dp" >
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/PartyDetails_map_layout"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/PartyDetails_partyaddress_layout"
                android:layout_width="match_parent"
                android:layout_height="40.0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/PartyDetails_partyaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/partydetails_partyaddress"
                    android:textSize="15.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PartyDetails_partyname_layout"
                android:layout_width="match_parent"
                android:layout_height="30.0dp"
                android:layout_below="@+id/PartyDetails_partyaddress_layout"
                android:layout_centerHorizontal="true" 
                android:layout_marginTop="15.0dp"
                >

                <TextView
                    android:id="@+id/PartyDetails_partyname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="@string/partydetails_partyname"
                    android:textColor="@drawable/PartyDetails_name_color"
                    android:textSize="22.0sp"
                     />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PartyDetails_partytime_layout"
                android:layout_width="match_parent"
                android:layout_height="60.0dp"
                android:layout_below="@+id/PartyDetails_partyname_layout"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/PartyDetails_partytime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dp"
                    android:gravity="center"
                    android:text="@string/partydetails_partytime"
                    android:textColor="#959595"
                    android:textSize="15.0sp" />

                <RelativeLayout
                    android:id="@+id/PartyDetails_partypayment_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/PartyDetails_partytime"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="5.0dp"
                    android:background="@drawable/payprompt_corners" >

                    <TextView
                        android:id="@+id/PartyDetails_partypayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:paddingBottom="2.0dp"
                        android:paddingLeft="20.0dp"
                        android:paddingRight="20.0dp"
                        android:paddingTop="2.0dp"
                        android:text="@string/partydetails_partypayment"
                        android:textSize="12.0sp" />
                </RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PartyDetails_partytime_layout"
                android:layout_centerHorizontal="true" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="match_parent"
                    android:layout_height="30.0dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" >

                    <RelativeLayout
                        android:id="@+id/PartyDetails_partake_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/PartyDetails_partake"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/partydetails_partake"
                            android:textColor="#959595"
                            android:textSize="17.0sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/PartyDetails_did_not_say_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="0.9" >

                        <TextView
                            android:id="@+id/PartyDetails_did_not_say"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="@string/partydetails_did_not_say"
                            android:textColor="#959595"
                            android:textSize="17.0sp" />
                    </RelativeLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/PartyDetails_numner_layout"
                    android:layout_width="match_parent"
                    android:layout_height="40.0dp"
                    android:layout_below="@+id/linearLayout1"
                    android:layout_centerHorizontal="true" >

                    <RelativeLayout
                        android:id="@+id/PartyDetails_partake_number_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/PartyDetails_partake_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@drawable/PartyDetails_number_color"
                            android:textSize="30.0sp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/PartyDetails_did_not_say_number_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >

                        <TextView
                            android:id="@+id/PartyDetails_did_not_say_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:text="0"
                            android:textColor="@drawable/PartyDetails_number_color"
                            android:textSize="30.0sp" />
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PartyDetails_party_organizer_layout"
                android:layout_width="match_parent"
                android:layout_height="30.0dp"
                android:layout_below="@+id/PartyDetails_prompt"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/PartyDetails_party_organizer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/partydetails_party_organizer"
                    android:textSize="13.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PartyDetails_prompt"
                android:layout_width="match_parent"
                android:layout_height="10.0dp"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/relativeLayout1"
                android:layout_marginTop="10.0dp" >

                <!-- 30.0dp -->
                <!--
                     <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/partydetails_prompt"
                    android:textColor="#d3d3d3"
                    android:textSize="13.0sp" />
                -->
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/PartyDetails_apply_layout"
                android:layout_width="match_parent"
                android:layout_height="50.0dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:background="#55d4cc" >

                <TextView
                    android:id="@+id/PartyDetails_apply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:text="@string/partydetails_apply"
                    android:textColor="#ffffff"
                    android:textSize="15.0sp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>