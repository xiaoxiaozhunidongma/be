<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalDataActivity" >

    <RelativeLayout
        android:id="@+id/PersonalDataTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa"
            />

        <Button
            android:id="@+id/PersonalDataBack"
            android:layout_width="65.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            />

        <Button
            android:id="@+id/PersonalDataOK"
            android:layout_width="65.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/PersonalDataNoShowLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/PersonalDataTitleLayout"
        android:layout_centerHorizontal="true"
         >

        <RelativeLayout
            android:id="@+id/PersonalDataShowLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="100.0dp"
            android:background="#efefef" >

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="85.0dp"
                android:layout_height="85.0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20.0dp" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="85.0dp"
                    android:layout_height="85.0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/yuan_green" />

                <RelativeLayout
                    android:layout_width="80.0dp"
                    android:layout_height="80.0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true" >

                    <ImageView
                        android:id="@+id/PersonalDataHead"
                        android:layout_width="80.0dp"
                        android:layout_height="80.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:src="@drawable/yuan_6" />
                </RelativeLayout>
            </RelativeLayout>

            <TextView
                android:id="@+id/PersonalDataName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/relativeLayout1"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="25.0dp"
                android:text="Name"
                android:textColor="#000000"
                android:textSize="15.0sp" />

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:layout_height="150.0dp"
                android:layout_below="@+id/PersonalDataName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30.0dp"
                android:background="#ffffff" >

                <RelativeLayout
                    android:id="@+id/relativeLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="50.0dp"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="0.50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#aaaaaa" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="match_parent"
                        android:layout_height="0.50dp"
                        android:layout_alignParentTop="true"
                        android:background="#aaaaaa" />

                    <Button
                        android:id="@+id/PersonalDataPhoneBut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="0.50dp"
                        android:layout_marginTop="0.50dp"
                        android:background="@drawable/but_click_selector"
                        android:gravity="left|center"
                        android:paddingLeft="20.0dp"
                        android:text="   拨打电话"
                        android:textSize="13.0sp"
                        android:drawableLeft="@drawable/phone"
                        
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout3"
                    android:layout_width="match_parent"
                    android:layout_height="50.0dp"
                    android:layout_below="@+id/relativeLayout2"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="match_parent"
                        android:layout_height="0.50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#aaaaaa" />

                    <Button
                        android:id="@+id/PersonalDataMessageBut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="0.50dp"
                        android:layout_marginTop="0.50dp"
                        android:background="@drawable/but_click_selector"
                        android:gravity="left|center"
                        android:paddingLeft="20.0dp"
                        android:text="   发信息"
                        android:textSize="13.0sp"
                        android:drawableLeft="@drawable/message"
                         />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50.0dp"
                    android:layout_below="@+id/relativeLayout3"
                    android:layout_centerHorizontal="true" >

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="match_parent"
                        android:layout_height="0.50dp"
                        android:layout_alignParentBottom="true"
                        android:background="#aaaaaa" />

                    <Button
                        android:id="@+id/PersonalDataDirectMessagesBut"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="0.50dp"
                        android:layout_marginTop="0.50dp"
                        android:background="@drawable/but_click_selector"
                        android:gravity="left|center"
                        android:paddingLeft="20.0dp"
                        android:text="   私信ta"
                        android:textSize="13.0sp"
                        android:drawableLeft="@drawable/directmessages"
                         />
                </RelativeLayout>
            </RelativeLayout>

        </RelativeLayout>
            <RelativeLayout
                android:id="@+id/PersonalDataBackground"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#cc000000"
                android:visibility="gone"
                 >

            </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>
