<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="180.0dp"
        android:layout_centerHorizontal="true"
        android:layout_margin="10.0dp"
        android:background="#d3d3d3" >

        <ImageView
            android:id="@+id/home_item_head"
            android:layout_width="match_parent"
            android:layout_height="130.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:scaleType="fitXY"
            android:src="@drawable/newteam" 
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/home_item_head"
            android:layout_centerHorizontal="true"
            android:layout_margin="0.50dp"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/home_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="TextView"
                android:textSize="17.0sp" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>