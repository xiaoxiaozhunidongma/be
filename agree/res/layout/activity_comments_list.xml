<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/title_background"
    tools:context=".CommentsListActivity" >

    <RelativeLayout
        android:id="@+id/Comments_list_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/Comments_list_back_layout"
            android:layout_width="@dimen/title_left_width"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/Comments_list_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="返回"
                android:textColor="@drawable/title_left_color"
                android:textSize="@dimen/title_left_size" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#aaaaaa" />

        <!--
        <RelativeLayout
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="保存"
                android:textColor="#d3d3d3"
                android:textSize="17.0sp" />
        </RelativeLayout>
        -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="100.0dp"
            android:text="参与列表"
            android:textColor="#535353"
            android:textSize="15.0sp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Comments_list_layout"
        android:layout_width="match_parent"
        android:layout_height="70.0dp"
        android:layout_below="@+id/Comments_list_title_layout"
        android:layout_centerHorizontal="true"
        android:background="#88ffffff"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/Commentslist_partake_list_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/Commentslist_partake_list_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8.0dp"
                    android:text="参与"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Commentslist_partake_list_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Commentslist_partake_list_prompt"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#00e3e3"
                    android:textSize="30.0sp" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/Commentslist_not_say_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:gravity="center" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/Commentslist_not_say_prompt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="10.0dp"
                    android:text="未表态"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/Commentslist_not_say_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/Commentslist_not_say_prompt"
                    android:layout_centerHorizontal="true"
                    android:text="0"
                    android:gravity="center"
                    android:textColor="#00e3e3"
                    android:textSize="30.0sp" />
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/Comments_list_layout"
        android:layout_centerHorizontal="true" >

        <ListView
            android:id="@+id/Commentslist_partake_list_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff" >
        </ListView>

        <ListView
            android:id="@+id/Commentslist_not_say_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="#ffffff" >
        </ListView>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

</RelativeLayout>