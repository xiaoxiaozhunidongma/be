<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/EditTextLayout"
        android:layout_width="match_parent"
        android:layout_height="185.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/EditTextMinusLayout"
            android:layout_width="60.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20.0dp" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/minus_gray"
                android:gravity="center"
                android:text="减少"
                android:textColor="#c9c9c9"
                android:textSize="13.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/EditTextMinusLayout" >

            <RelativeLayout
                android:id="@+id/EditTextPrompt"
                android:layout_width="match_parent"
                android:layout_height="40.0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="30.0dp"
                    android:text="输入文字"
                    android:textColor="#808080"
                    android:textSize="18.0sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/EditTextPrompt" >

                <EditText
                    android:id="@+id/EditText_EditText"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="10.0dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint=""
                    android:gravity="top"
                    android:textSize="14.0sp" >
                   
                </EditText>
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
<!-- <requestFocus />  -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40.0dp"
        android:layout_below="@+id/EditTextLayout"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/EditTextBoldLayout"
            android:layout_width="40.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75.0dp" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dp"
                android:text="B"
                android:textStyle="bold"
                android:textColor="#535353"
                android:textSize="25.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/EditTextBoldLayout" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dp"
                android:layout_marginRight="20.0dp" >

                <RelativeLayout
                    android:id="@+id/EditTextLightGrayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextLightGrayImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_light_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/EditTextDarkGrayLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextDarkGrayImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/tick_dark_gray" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/EditTextBlackLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextBlackImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_black" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/EditTextRedLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextRedImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_red" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/EditTextBlueLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextBlueImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_blue" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/EditTextGreenLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1" >

                    <ImageView
                        android:id="@+id/EditTextGreenImage"
                        android:layout_width="20.0dp"
                        android:layout_height="20.0dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/round_green" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>