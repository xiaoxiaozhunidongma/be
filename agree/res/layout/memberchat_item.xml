<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="50.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10.0dp"
            android:layout_marginTop="5.0dp" >

            <ImageView
                android:id="@+id/MemberChat_head"
                android:layout_width="40.0dp"
                android:layout_height="40.0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/login_1" />
        </RelativeLayout>

        <TextView
            android:id="@+id/MemberChat_name"
            android:layout_width="150.0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10.0dp"
            android:layout_marginTop="10.0dp"
            android:layout_toRightOf="@+id/relativeLayout1"
            android:gravity="left|center"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/MemberChat_role"
            android:layout_width="150.0dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/MemberChat_name"
            android:layout_below="@+id/MemberChat_name"
            android:gravity="left|center"
            android:text="TextView"
            android:textColor="#808080"
            android:textSize="10.0sp" />

        <TextView
            android:id="@+id/MemberChat_line_1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="#aaaaaa"
            android:visibility="gone" />

        <TextView
            android:id="@+id/MemberChat_line_2"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10.0dp"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/MemberChat_delete"
            android:layout_width="60.0dp"
            android:layout_height="40.0dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10.0dp"
            android:layout_marginTop="5.0dp"
            android:text="删除"
            android:gravity="center"
            android:textColor="#88d4cc"
            android:textSize="13.0sp" />
    </RelativeLayout>

</RelativeLayout>