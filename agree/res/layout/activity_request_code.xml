<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#deffffff"
    tools:context=".RequestCodeActivity" >

    <TextView
        android:id="@+id/request_tv_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:gravity="center"
        android:text="输入小组验证码"
        android:textColor="#55aeae"
        android:textSize="20.0sp" 
        />

    <EditText
        android:id="@+id/request_edt_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:background="#deffffff"
        android:ems="10"
        android:gravity="center"
        android:hint="请输入验证码"
        android:textColor="#55aeae"
        android:textSize="20.0sp"
        android:visibility="gone"
        >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/request_OK"
        android:layout_width="80.0dp"
        android:layout_height="80.0dp"
        android:layout_below="@+id/request_edt_code"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="125dp"
        android:background="@drawable/login_selector"
        android:gravity="center"
        android:text="完成"
        android:textColor="#ffffff"
        android:textSize="18.0sp" 
        android:visibility="gone"
        />

</RelativeLayout>