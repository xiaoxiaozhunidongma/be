    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_chat_activity"
        android:layout_weight="1.30"
        >

        <ImageView
            android:id="@+id/iv_userhead"
            android:layout_width="@dimen/size_avatar"
            android:layout_height="@dimen/size_avatar"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/margin_chat_activity"
            android:scaleType="fitXY"
            android:src="@drawable/mini_avatar_shadow" />

        <RelativeLayout
            android:id="@+id/rela_chatcontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_userid"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_userhead" >

            <TextView
                android:id="@+id/tv_chatcontent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoLink="web"
                android:background="@drawable/leftchat"
                android:clickable="true"
                android:focusable="true"
                android:gravity="left|center"
                android:lineSpacingExtra="2dp"
                android:maxWidth="225.0dip"
                android:minHeight="30dp"
                android:textColor="#ff000000"
                android:textSize="13sp" />

            <RelativeLayout
                android:id="@+id/rela_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/tv_chatcontent"
                android:padding="5dp" >

                <TextView
                    android:id="@+id/tv_yymmdd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:text="15/8/7"
                    android:textColor="#8e8e8e"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_hhmm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_yymmdd"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="1dp"
                    android:text="10:16"
                    android:textColor="#8e8e8e"
                    android:textSize="12sp" />
            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_userid"
            style="@style/chat_text_name_style"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/rela_chatcontent"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="7dp"
            android:text="小明"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>