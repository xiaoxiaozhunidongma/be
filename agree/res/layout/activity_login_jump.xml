<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginJumpActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120.0dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/LoginJump_phone_layout"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:layout_marginTop="5.0dp"
            android:background="@drawable/login_white_corners" >

            <TextView
                android:id="@+id/LoginJump_phone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="手机注册"
                android:textColor="#00e3e3" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/LoginJump_weixin_layout"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_marginBottom="5.0dp"
            android:layout_marginLeft="20.0dp"
            android:layout_marginRight="20.0dp"
            android:layout_marginTop="5.0dp"
            android:background="@drawable/login_green_corners" >

            <TextView
                android:id="@+id/LoginJump_weixin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="微信注册"
                android:textColor="#ffffff" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>