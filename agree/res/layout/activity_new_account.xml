<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efefef"
    tools:context=".NewAccountActivity" >

    <RelativeLayout
        android:id="@+id/NewAccountTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <Button
            android:id="@+id/NewAccountBackBut"
            android:layout_width="65.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:text="返回"
            android:textColor="@drawable/title_left_color"
            android:textSize="13.0sp" />

        <Button
            android:id="@+id/NewAccountSaveBut"
            android:layout_width="65.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@null"
            android:text="保存"
            android:textColor="@drawable/title_right_color"
            android:textSize="13.0sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/NewAccountBackBut"
            android:layout_alignBottom="@+id/NewAccountBackBut"
            android:layout_marginLeft="40.0dp"
            android:layout_toRightOf="@+id/NewAccountBackBut"
            android:text="添加账号"
            android:textColor="#535353"
            android:textSize="15.0sp" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NewAccountChooseWayLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/NewAccountTitleLayout"
        android:layout_centerHorizontal="true"
         >

        <RelativeLayout
            android:id="@+id/relativeLayout1"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="20.0dp"
                android:layout_marginTop="25.0dp"
                android:text="选择账户类型"
                android:textColor="#808080"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="132.0dp"
            android:layout_below="@+id/relativeLayout1"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" >

            <RelativeLayout
                android:id="@+id/NewAccountWeChatAccountBut"
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20.0dp"
                    android:background="#aaaaaa" />

                <TextView
                    android:id="@+id/textView16"
                    android:layout_width="83.0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dp"
                    android:drawableLeft="@drawable/settingname1"
                    android:gravity="right|center"
                    android:text="微信账户"
                    android:textColor="#535353"
                    android:textSize="13.0sp" />

            </RelativeLayout>

            <RelativeLayout
                 android:id="@+id/NewAccountAliPayAccountBut"
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20.0dp"
                    android:background="#aaaaaa" />

                <TextView
                    android:id="@+id/textView17"
                    android:layout_width="96.0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dp"
                    android:text="支付宝账户"
                    android:textColor="#535353"
                    android:gravity="right|center"
                    android:drawableLeft="@drawable/settingname1"
                    android:textSize="13.0sp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/NewAccountUnionPayAccountBut"
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_below="@+id/NewAccountAliPayAccountBut"
                android:layout_centerHorizontal="true" >


                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#aaaaaa" />

                <TextView
                    android:id="@+id/textView18"
                    android:layout_width="83.0dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20.0dp"
                    android:text="银联账户"
                    android:gravity="right|center"
                    android:drawableLeft="@drawable/settingname1"
                    android:textColor="#535353"
                    android:textSize="13.0sp" />

            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/NewAccountInformationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/NewAccountTitleLayout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
         >

        <RelativeLayout
            android:id="@+id/relativeLayout3"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dp"
                android:layout_marginTop="25.0dp"
                android:text="账户类型"
                android:textColor="#808080"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout4"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_below="@+id/relativeLayout3"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa" />

            <Button
                android:id="@+id/NewAccountChooseAccountBut"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:background="@null"
                android:gravity="left|center"
                android:paddingLeft="20.0dp"
                android:text="微信账户"
                android:textColor="#535353"
                android:textSize="13.0sp" />

            <RelativeLayout
                android:layout_width="50.0dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="20.0dp"
                    android:layout_height="20.0dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/jiantou" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayout5"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_below="@+id/relativeLayout4"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20.0dp"
                android:layout_marginTop="25.0dp"
                android:text="输入账户资料"
                android:textColor="#535353"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa"
                />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/NewAccountQuickPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_below="@+id/relativeLayout5"
            android:layout_centerHorizontal="true"
            android:background="#ffffff"
             >

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="50.0dp"
                android:layout_height="match_parent"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true" >
            </RelativeLayout>

            <EditText
                android:id="@+id/NewAccountAccountEdit"
                android:layout_width="match_parent"
                android:layout_height="30.0dp"
                android:layout_marginTop="7.0dp"
                android:layout_toRightOf="@+id/relativeLayout6"
                android:background="@null"
                android:ems="10"
                android:gravity="left|center"
                android:hint="填写账号信息"
                android:textColorHint="#c9c9c9"
                android:textSize="13.0sp" >

                <requestFocus />
            </EditText>

            <TextView
                android:id="@+id/textView15"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa"
                 />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/NewAccountBankPaymentLayout"
            android:layout_width="match_parent"
            android:layout_height="88.0dp"
            android:layout_below="@+id/relativeLayout5"
            android:layout_centerHorizontal="true" 
            android:background="#ffffff"
            android:visibility="gone"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" >

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="20.0dp"
                    android:background="#aaaaaa" />

                <RelativeLayout
                    android:layout_width="50.0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" >
                </RelativeLayout>

                <EditText
                    android:id="@+id/NewAccountBankPaymentNameEdit"
                    android:layout_width="match_parent"
                    android:layout_height="30.0dp"
                    android:layout_marginTop="7.0dp"
                    android:background="@null"
                    android:ems="10"
                    android:hint="填写姓名"
                    android:textColorHint="#c9c9c9"
                    android:textSize="13.0sp" 
                    android:layout_marginLeft="50.0dp"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="44.0dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                 >

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="match_parent"
                    android:layout_height="0.50dp"
                    android:layout_alignParentBottom="true"
                    android:background="#aaaaaa"
                     />

                <RelativeLayout
                    android:layout_width="50.0dp"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true" >
                </RelativeLayout>

                <EditText
                    android:id="@+id/NewAccountBankPaymentBankEdit"
                    android:layout_width="match_parent"
                    android:layout_height="30.0dp"
                    android:ems="10"
                    android:background="@null"
                    android:layout_marginLeft="50.0dp"
                    android:hint="填写银行卡号"
                    android:textSize="13.0sp"
                    android:textColorHint="#c9c9c9"
                    android:layout_marginTop="7.0dp"
                     />

            </RelativeLayout>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>