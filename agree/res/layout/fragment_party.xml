<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartyFragment" >

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
	    android:id="@+id/tab_party_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp" >

        <TextView
            android:id="@+id/tab_party_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="日程"
            android:textSize="18sp"
             />

        <RelativeLayout
            android:id="@+id/tab_party_new_layout"
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/tab_party_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="新建"
                android:textColor="#d3d3d3"
                android:textSize="17.0sp" />

        </RelativeLayout>
        
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
			android:background="#aaaaaa"            
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_party_prompt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_party_title_layout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
        >

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:textColor="#ff0000"
            android:text="你还没有创建日程哦！" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_party_list_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_party_title_layout"
        android:layout_centerHorizontal="true"
        >

        <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/pull_refresh_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#ffffff"
        android:cacheColorHint="#00000000"
        android:divider="#19000000"
        android:dividerHeight="1dp"
        android:fadingEdge="none"
        android:fastScrollEnabled="false"
        android:footerDividersEnabled="false"
        android:headerDividersEnabled="false"
        android:smoothScrollbar="true"
        ptr:ptrAnimationStyle="rotate"
        ptr:ptrDrawableStart="@drawable/refreshing_animtaion" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/tab_party_prompt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_party_title_layout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="你还没有参与过日程哦！"
            android:textColor="#ff0000"
            />

    </RelativeLayout>

</RelativeLayout>
