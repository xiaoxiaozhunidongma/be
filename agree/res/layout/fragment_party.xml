<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ptr="http://schemas.android.com/apk/res-auto"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PartyFragment" >

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:id="@+id/tab_party_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp" >

        <TextView
            android:id="@+id/tab_party_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="日程"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/tab_party_new_layout"
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true" >

            <TextView
                android:id="@+id/tab_party_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="新建"
                android:textColor="#d3d3d3"
                android:textSize="17.0sp" />
        </RelativeLayout>
    </RelativeLayout>

    
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/tab_party_swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50.0dp"
        android:visibility="gone"
         >

        <ListView
            android:id="@+id/tab_party_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" >
        </ListView>
    </android.support.v4.widget.SwipeRefreshLayout>
   

    <RelativeLayout
        android:id="@+id/tab_party_prompt_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_party_title_layout"
        android:layout_centerHorizontal="true"
        android:visibility="gone"
         >

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:text="你还没有参与过日程哦！"
            android:textColor="#ff0000" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:background="#aaaaaa" />
    </RelativeLayout>

</RelativeLayout>
