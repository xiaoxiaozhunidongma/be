<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    >

    <RelativeLayout
        android:id="@+id/TouchBalanceCashAccount"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
         >

        <TextView
            android:id="@+id/TouchBalanceLine2"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa"
            android:visibility="gone"
             />

        <TextView
            android:id="@+id/TouchBalanceAccountShowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="5.0dp"
            android:text="无取现账号信息"
            android:textColor="#535353"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/TouchBalanceChooseWayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TouchBalanceAccountShowText"
            android:layout_below="@+id/TouchBalanceAccountShowText"
            android:text="请点击右上角&apos;新建账户&apos;按钮进行添加..."
            android:textColor="#808080"
            android:textSize="11.0sp" />

        <TextView
            android:id="@+id/TouchBalanceLine1"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa"
            android:layout_marginLeft="20.0dp"
            />

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="20.0dp"
            android:layout_height="20.0dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20.0dp"
            android:src="@drawable/jiantou" />

    </RelativeLayout>

</RelativeLayout>