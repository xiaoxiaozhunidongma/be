<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/AccountFooter"
        android:layout_width="match_parent"
        android:layout_height="44.0dp"
        android:layout_centerHorizontal="true"
        android:background="#ffffff" >

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />

        <TextView
            android:id="@+id/AccountFooterShowText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="20.0dp"
            android:layout_marginTop="5.0dp"
            android:text="无取现账号信息"
            android:textColor="#c9c9c9"
            android:textSize="14.0sp" />

        <TextView
            android:id="@+id/AccountFooterChooseWayText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/AccountFooterShowText"
            android:layout_below="@+id/AccountFooterShowText"
            android:text="请点击右上角&apos;新建账户&apos;按钮进行添加..."
            android:textColor="#808080"
            android:textSize="11.0sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/AccountFooter"
        android:layout_centerHorizontal="true"
        android:background="#efefef"
         >

        <RelativeLayout
            android:id="@+id/TouchBalanceAccountPrompt1"
            android:layout_width="match_parent"
            android:layout_height="50.0dp"
            android:layout_below="@+id/TouchBalanceAccountShowLayout"
            android:layout_centerHorizontal="true" >

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="10.0dp"
                android:layout_marginLeft="16dp"
                android:text="历史详单"
                android:textColor="#808080"
                android:textSize="13.0sp" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TouchBalanceHistoryList"
            android:layout_width="match_parent"
            android:layout_height="44.0dp"
            android:layout_below="@+id/TouchBalanceAccountPrompt1"
            android:layout_centerHorizontal="true"
            android:background="#ffffff" >

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="0.50dp"
                android:layout_alignParentBottom="true"
                android:background="#aaaaaa" />

            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20.0dp"
                android:text="历史详单信息"
                android:textSize="14.0sp" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20.0dp"
                android:layout_height="20.0dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20.0dp"
                android:src="@drawable/jiantou" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/TouchBalanceAccountPrompt2"
            android:layout_width="match_parent"
            android:layout_height="150.0dp"
            android:layout_below="@+id/TouchBalanceHistoryList"
            android:layout_centerHorizontal="true" >
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>