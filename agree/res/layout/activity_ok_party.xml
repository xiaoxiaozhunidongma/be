<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OkPartyActivity" >

    <RelativeLayout
        android:id="@+id/OkParty_title_layout"
        android:layout_width="match_parent"
        android:layout_height="50.0dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#f0f0f0" >

        <RelativeLayout
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="返回"
                android:textColor="#d3d3d3"
                android:textSize="17.0sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="80.0dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true" >

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="完成"
                android:textColor="#d3d3d3"
                android:textSize="17.0sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="确认聚会"
            android:textColor="#000000"
            android:textSize="18.0sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="0.50dp"
            android:layout_alignParentBottom="true"
            android:background="#aaaaaa" />
    </RelativeLayout>

    <TextView
        android:id="@+id/OkParty_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OkParty_title_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:text="聚会名称"
        android:textSize="25.0sp" />

    <TextView
        android:id="@+id/OkParty_note"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OkParty_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="聚会的备注信息"
        android:textSize="17.0sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/OkParty_note"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="50dp"
        android:text="地址:"
        android:textSize="17.0sp" />

    <TextView
        android:id="@+id/OkParty_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView7"
        android:layout_alignBottom="@+id/textView7"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/textView7"
        android:gravity="left"
        android:text="TextView"
        android:textSize="17.0sp" />

    <TextView
        android:id="@+id/OkParty_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView7"
        android:layout_marginTop="26dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:text="TextView"
        android:textSize="17.0sp" />

    <TextView
        android:id="@+id/OkParty_feedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView10"
        android:layout_centerHorizontal="true"
        android:text="开启" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/OkParty_time"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:text="反馈设置"
        android:textSize="17.0sp" />


</RelativeLayout>